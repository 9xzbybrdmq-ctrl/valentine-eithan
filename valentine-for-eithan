<script>
let stage = 1;
let love = 100;

const noBtn = document.getElementById("noBtn");

noBtn.addEventListener("mouseover", () => {
    const x = Math.random() * (window.innerWidth - 100);
    const y = Math.random() * (window.innerHeight - 50);
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";
});

function nextStage() {
    if (stage === 1) {
        document.getElementById("question").innerText =
        "Eithan, how much do you love me? ğŸ’•";

        document.getElementById("buttons").innerHTML =
        '<button onclick="increaseLove()">This much! <span id="percent">100%</span></button><br><button onclick="finalQuestion()">Next â¤ï¸</button>';

        stage = 2;
    }
}

function increaseLove() {
    love *= 2;
    document.getElementById("percent").innerText = love + "%";
}

function finalQuestion() {
    document.getElementById("question").innerText =
    "Eithanâ€¦ will you be my Valentine? ğŸ’";

    document.getElementById("buttons").innerHTML =
    '<button onclick="celebrate()">YES!</button><button id="noBtn2">No</button>';

    const noBtn2 = document.getElementById("noBtn2");

    noBtn2.addEventListener("mouseover", () => {
        const x = Math.random() * (window.innerWidth - 100);
        const y = Math.random() * (window.innerHeight - 50);
        noBtn2.style.position = "absolute";
        noBtn2.style.left = x + "px";
        noBtn2.style.top = y + "px";
    });

    stage = 3;
}

