<script>
let stage = 1;
let love = 100;

function answerYes() {
    if (stage === 1) {
        document.getElementById("question").innerText = "Eithan, how much do you love me? ğŸ’•";
        document.getElementById("buttons").innerHTML =
            '<button onclick="increaseLove()">This much! <span id="percent">100%</span></button><br><button onclick="nextStage()">Next â¤ï¸</button>';
        stage = 2;
    } else if (stage === 3) {
        celebrate();
    }
}

function answerNo() {
    if (stage === 1) {
        document.getElementById("message").innerText = "You may like meâ€¦ but I LOVE you, Eithan! â¤ï¸";
    } else if (stage === 3) {
        alert("Wrong answer Eithan ğŸ˜œ Try again!");
    }
}

function increaseLove() {
    love *= 2;
    document.getElementById("percent").innerText = love + "%";
}

function nextStage() {
    document.getElementById("question").innerText = "Eithanâ€¦ will you be my Valentine? ğŸ’";
    document.getElementById("buttons").innerHTML =
        '<button onclick="answerYes()">Yes!</button><button onclick="answerNo()">No</button>';
    stage = 3;
}

